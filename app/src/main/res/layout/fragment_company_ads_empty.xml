<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.company_ads_empty.CompanyAdsEmptyFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleTextviewCompanyAdsEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_add_empty"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageCompanyAdsEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_empty_ads"
            app:layout_constraintEnd_toEndOf="@+id/titleTextviewCompanyAdsEmpty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextviewCompanyAdsEmpty" />

        <ImageView
            android:id="@+id/pointerCompanyAdsEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pointer_empty_ads"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@+id/newAddButton"
            app:layout_constraintTop_toBottomOf="@+id/imageCompanyAdsEmpty" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/newAddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:backgroundTint="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/orange"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageCompanyAdsEmpty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@+id/newAddButton"
            app:layout_constraintTop_toBottomOf="@+id/newAddButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>