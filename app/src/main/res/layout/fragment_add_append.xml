                app:hintTextColor="@color/text_hint"
                app:layout_constraintEnd_toEndOf="@+id/nameHotelLayoutAppendAdd"
                app:layout_constraintStart_toStartOf="@+id/nameHotelLayoutAppendAdd"
                app:layout_constraintTop_toBottomOf="@+id/nameHotelLayoutAppendAdd">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cityHotelEditTextAppendAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_city"
                    android:minHeight="48dp"
                    android:paddingStart="33dp"
                    android:paddingEnd="33dp"
                    android:fontFamily="@font/poppins"
                    android:textColorLink="@color/text_hint"
                    android:textColor="@color/text_hint"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addressHotelLayoutAppendAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:boxBackgroundColor="@color/text_input"
                android:textColorHint="@color/text_hint"
