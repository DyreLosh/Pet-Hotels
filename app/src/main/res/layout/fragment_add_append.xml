                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/checkboxDogAppendAdd"
                app:layout_constraintTop_toBottomOf="@+id/checkboxDogAppendAdd" />

            <TextView
                android:id="@+id/hintDescribeHotelAppendAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/hint_describe_add_ad"
                android:textColor="@color/text"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/checkboxRodentAppendAdd"
