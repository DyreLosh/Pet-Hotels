                    android:minHeight="48dp"
                    android:paddingStart="33dp"
                    android:paddingEnd="33dp"
                    android:fontFamily="@font/poppins"
                    android:textColorLink="@color/text_hint"
                    android:textColor="@color/text_hint"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/numberHotelLayoutAppendAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:boxBackgroundColor="@color/text_input"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/text_hint"
                app:boxStrokeColor="@color/text_hint"
                app:hintTextColor="@color/text_hint"
                app:layout_constraintEnd_toEndOf="@+id/addressHotelLayoutAppendAdd"
                app:layout_constraintStart_toStartOf="@+id/addressHotelLayoutAppendAdd"
                app:layout_constraintTop_toBottomOf="@+id/addressHotelLayoutAppendAdd">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/numberHotelEditTextAppendAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_number"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:inputType="phone"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="33dp"
                    android:paddingEnd="33dp"
                    android:textColorLink="@color/text_hint"
                    android:textColor="@color/text_hint"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/hintAnimalsAppendAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/hint_animals_add_ad"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                app:layout_constraintStart_toStartOf="@+id/numberHotelLayoutAppendAdd"
                app:layout_constraintTop_toBottomOf="@+id/numberHotelLayoutAppendAdd" />

            <CheckBox
                android:id="@+id/checkboxCatAppendAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
