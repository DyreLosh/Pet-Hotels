<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.user.changepassword.ChangePasswordFragment">

    <ImageView
        android:id="@+id/backToProfileInChangeProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Редактировать пароль"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/button_color"
        android:textSize="25sp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userOldPasswordInputLayout"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:hintTextColor="@color/text_hint"
        android:hint="Старый пароль"
        app:passwordToggleEnabled="true"
        android:textColorHint="@color/text_hint"
        app:boxBackgroundColor="@color/text_input"
        app:boxStrokeColor="@color/text_hint"
        app:boxCornerRadiusTopStart="20dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userOldPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:minHeight="48dp"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:textColor="@color/text_hint"
            android:textColorLink="@color/text_hint"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userNewPasswordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:passwordToggleEnabled="true"
        app:hintTextColor="@color/text_hint"
        android:hint="Новый пароль"
        android:textColorHint="@color/text_hint"
        app:boxBackgroundColor="@color/text_input"
        app:boxStrokeColor="@color/text_hint"
        app:boxCornerRadiusTopStart="20dp"
        >

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userNewPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:textColor="@color/text_hint"
            android:textColorLink="@color/text_hint"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeUserPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/button_color"
        android:layout_marginHorizontal="20dp"
        android:text="Сохранить"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        android:paddingVertical="15dp"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="200dp"/>

</LinearLayout>